rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isStudent() {
      return getUserData().role == 'student';
    }
    
    function isTeamLead() {
      return getUserData().role == 'team_lead';
    }
    
    function isGuide() {
      return getUserData().role == 'guide';
    }
    
    function isCoordinator() {
      return getUserData().role == 'coordinator';
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if true; // Temporarily allow all access for initialization
    }

    // Logs collection
    match /logs/{logId} {
      allow read, write: if true; // Temporarily allow all access for initialization
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if true; // Temporarily allow all access for initialization
    }
  }
}